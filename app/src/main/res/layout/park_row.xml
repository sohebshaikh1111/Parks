<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <ImageView
        android:id="@+id/row_park_imageview"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        android:padding="1dp"
        android:background="@color/primaryLightColor"
        app:layout_constraintCircleRadius="@dimen/cardview_default_elevation"/>

    <TextView
        android:id="@+id/row_par_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/textview1"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/row_park_imageview"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/primaryLightColor"
        android:fontFamily="@font/roboto"/>

    <TextView
        android:id="@+id/row_park_type_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/textview2"
        app:layout_constraintStart_toEndOf="@+id/row_park_imageview"
        app:layout_constraintTop_toBottomOf="@+id/row_par_name_textview"
        android:textColor="@color/primaryLightColor"
        android:fontFamily="@font/roboto"/>

    <TextView
        android:id="@+id/row_part_state_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="@string/textview3"
        app:layout_constraintStart_toEndOf="@+id/row_park_imageview"
        app:layout_constraintTop_toBottomOf="@+id/row_park_type_textview"
        android:textColor="@color/primaryLightColor"
        android:fontFamily="@font/roboto"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="1dp"
        android:background="@color/primaryTextColor"
        android:orientation="horizontal"
        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row_park_imageview"/>
</androidx.constraintlayout.widget.ConstraintLayout>